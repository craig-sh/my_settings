#
# bspwm hotkeys
#

# Monitor Settings
# Switch monitors
super + backslash
	bspc monitor -f next

super + shift + backslash
	bspc window -m next


super + alt + Escape
	bspc quit

#close window
super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f,p}
	bspc window -t {floating,fullscreen,pseudo_tiled}

#previous window
super + grave
	bspc window -f last

#previous desktop on current monitor
super + Tab
	bspc desktop -f last.local

#swap position with last window
super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

#make current window the biggest
super + m
	bspc window -s biggest

#swap window towards direction hijk
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

#cycle between windows
super + {_,shift + }
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

# Rotate leaves of tree
alt + shift + {comma,period}
	bspc desktop -R {90,270}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

#send window to desktop n
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

; super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

##################Snapping


######################

#
# wm independent hotkeys
#
XF86AudioMute
	amixer sset Master toggle

button9
	amixer sset 'Front Mic' unmute

@button9
	amixer sset 'Front Mic' mute

XF86AudioNext
	mpc -q next

XF86AudioPrev
	mpc -q prev

XF86AudioStop
	mpc -q stop

XF86AudioPlay
	mpc -q toggle

XF86AudioRaiseVolume
    amixer set Master 2%+ unmute

XF86AudioLowerVolume
    amixer set Master 2%-

XF86Sleep
	sudo systemctl suspend

super + Return
	urxvt

super + space
	dmenu_run

super + alt + c
	chromium --disk-cache-dir=/tmp/chromium/cache

super + alt + w
	bspc rule -a Chromium --one-shot desktop=X follow=off;chromium --app="https://web.whatsapp.com/" --disk-cache-dir=/tmp/chromium/cache &

super + alt + m
	clementine

super + alt + s
	apulse32 skype

super + alt + p
	wmname LG3D; source /home/craig/Downloads/pycharm-4.0.6/bin/pycharm.sh

super + alt + z
	~/Downloads/sublime_text_3/sublime_text --new-window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
