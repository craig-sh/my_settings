#
# bspwm hotkeys
#

# Monitor Settings
# Only works for 2 monitors
# Switch monitors
super + backslash
	bspc monitor -f next

# Send node to other monitor
super + shift + backslash
	bspc node -m next -f

super + alt + Escape
	bspc quit

#close node
super + w
	bspc node -c

super + n
	bspc desktop -l next

super + b
	bspc desktop -B

super + {t,p,s,f}
	bspc node -t {tiled,pseudo_tiled,~floating,fullscreen}

#previous node
super + grave
	bspc node -f last

#previous desktop on current monitor
super + Tab
	bspc desktop -f last.local

#swap position with last node
super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.!automatic

#make current node the biggest
super + m
	bspc node -s biggest

#swap node towards direction hijk
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

#cycle between nodes
super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

# Rotate leaves of tree
alt + shift + {comma,period}
	bspc desktop -R {90,270}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node @{left,south,north,east} -r {10,+10,-10, +10}

super + alt + shift + {h,j,k,l}
	bspc nocde @{east,north,south,west } -r {-10,+10,-10,+10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {Left,Down,Up,Right}
    xdo move {-x -20,-y +20,-y -20,-x +20}

#send node to desktop n
super + {_,shift + }{1,2,3,4,5,6,7,8,9,0}
	bspc {desktop -f,node -d} '{I,II,III,IV,V,VI,VII,VIII,IX,X}'

~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u


#
# wm independent hotkeys
#

button9
	amixer sset 'Front Mic' unmute

@button9
	amixer sset 'Front Mic' mute

# These audio controls only work if ONE pulse audio device is active
	#amixer sset PCM toggle
	#pactl set-sink-mute $(pactl list sinks short | awk "{print \$1}") toggle
XF86AudioMute
	pactl set-sink-mute $(cat /tmp/audio_sink) toggle

  	#amixer set PCM 2%+ unmute
XF86AudioRaiseVolume
	pactl set-sink-volume $(cat /tmp/audio_sink) +2%

  	#amixer set PCM 2%-
XF86AudioLowerVolume
	pactl set-sink-volume $(cat /tmp/audio_sink) -2%

XF86AudioNext
	/home/craig/my_settings/my_scripts/send_to_wine_spotify.sh 'Control_L+Right'

XF86AudioPrev
	/home/craig/my_settings/my_scripts/send_to_wine_spotify.sh 'Control_L+Left'

XF86AudioStop
	/home/craig/my_settings/my_scripts/send_to_wine_spotify.sh 'space'

XF86AudioPlay
	/home/craig/my_settings/my_scripts/send_to_wine_spotify.sh 'space'

XF86Sleep
	sudo systemctl suspend

super + Return
	urxvt

super + space
	dmenu_run

super + alt + c
	chromium

super + alt + w
	bspc rule -a Chromium --one-shot desktop=X follow=off;chromium --app="https://web.whatsapp.com/"

super + alt + m
	pkill spotify.exe;\
	playonlinux --run "Spotify"

super + alt + n
	nautilus

super + alt + s
	skype

super + alt + p
	wmname LG3D && LD_PRELOAD=/lib64/libglib-2.0.so /usr/local/bin/pycharm

super + alt + i
	wmname LG3D && LD_PRELOAD=/lib64/libglib-2.0.so /usr/local/bin/idea

super + alt + a
	wmname LG3D &&  LD_PRELOAD=/lib64/libglib-2.0.so /usr/local/bin/studio

super + alt + z
	~/Downloads/sublime_text_3/sublime_text --new-window

super + alt + backslash
	xset dpms force off

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
